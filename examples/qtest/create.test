#!/usr/bin/env perl
require 5.008;
use warnings;
use strict;

chdir("create") or die "chdir testdir failed: $!\n";

require TestDriver;

cleanup();

my $td = new TestDriver('create');

$td->runtest("create a simple PDF",
	     {$td->COMMAND => "pdf-create a.pdf"},
	     {$td->FILE => "create.out", $td->EXIT_STATUS => 0},
             $td->NORMALIZE_NEWLINES);

cleanup();

$td->report(1);

sub cleanup
{
    unlink "a.pdf";
}
