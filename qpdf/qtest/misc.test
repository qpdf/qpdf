#!/usr/bin/env perl
require 5.008;
use warnings;
use strict;

unshift(@INC, '.');
require qpdf_test_helpers;

chdir("qpdf") or die "chdir testdir failed: $!\n";

require TestDriver;

my $dev_null = File::Spec->devnull();
cleanup();

my $td = new TestDriver('misc');

my $n_tests = 1;

$td->runtest("pipeline",
             {$td->COMMAND => "test_driver 62 -"},
             {$td->STRING => "test 62 done\n",
                  $td->EXIT_STATUS => 0},
             $td->NORMALIZE_NEWLINES);

cleanup();
$td->report($n_tests);
