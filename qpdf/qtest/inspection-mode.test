#!/usr/bin/env perl
require 5.008;
use warnings;
use strict;

unshift(@INC, '.');
require qpdf_test_helpers;

chdir("qpdf") or die "chdir testdir failed: $!\n";

require TestDriver;

cleanup();

my $td = new TestDriver('inspection-mode');

my $n_tests = 1;

$td->runtest("inspection mode",
             {$td->COMMAND => "test_driver 101 - -"},
             {$td->FILE => "inspection-mode.out", $td->EXIT_STATUS => 0},
             $td->NORMALIZE_NEWLINES);

cleanup();
$td->report($n_tests);
