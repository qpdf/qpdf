#!/usr/bin/env perl
require 5.008;
BEGIN { $^W = 1; }
use strict;

chdir("buffer") or die "chdir testdir failed: $!\n";

require TestDriver;

my $td = new TestDriver('buffer');

$td->runtest("buffer",
	     {$td->COMMAND => "buffer"},
	     {$td->FILE => "buffer.out",
	      $td->EXIT_STATUS => 0},
	     $td->NORMALIZE_NEWLINES);

$td->report(1);
