#!/usr/bin/env perl
require 5.008;
BEGIN { $^W = 1; }
use strict;

chdir("pcre") or die "chdir testdir failed: $!\n";

require TestDriver;

my $td = new TestDriver('pcre');

$td->runtest("PCRE",
	     {$td->COMMAND => "pcre"},
	     {$td->FILE => "pcre.out",
	      $td->EXIT_STATUS => 0},
	     $td->NORMALIZE_NEWLINES);

$td->report(1);
