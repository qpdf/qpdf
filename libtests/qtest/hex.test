#!/usr/bin/env perl
require 5.008;
BEGIN { $^W = 1; }
use strict;

chdir("hex") or die "chdir testdir failed: $!\n";

require TestDriver;

my $td = new TestDriver('hex');

$td->runtest("decode",
	     {$td->COMMAND => "hex < hex.in"},
	     {$td->FILE => "binary.out",
	      $td->EXIT_STATUS => 0});

$td->runtest("partial decode",
	     {$td->COMMAND => "echo '7a65726F203D203>' | hex"},
	     {$td->STRING => "zero = 0",
	      $td->EXIT_STATUS => 0});

$td->report(2);
