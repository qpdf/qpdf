#!/usr/bin/env perl
require 5.008;
BEGIN { $^W = 1; }
use strict;

chdir("ph") or die "chdir testdir failed: $!\n";

require TestDriver;

my $td = new TestDriver('ph');

$td->runtest("PointerHolder",
	     {$td->COMMAND => "pointer_holder"},
	     {$td->FILE => "ph.out",
	      $td->EXIT_STATUS => 0},
	     $td->NORMALIZE_NEWLINES);

$td->report(1);
